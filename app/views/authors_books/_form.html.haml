= form_for @authors_book do |f|
  - if @authors_book.errors.any?
    #error_explanation
      %h2= "#{pluralize(@authors_book.errors.count, "error")} prohibited this authors_book from being saved:"
      %ul
        - @authors_book.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :author_id
    = f.number_field :author_id
  .field
    = f.label :book_id
    = f.number_field :book_id
  .actions
    = f.submit 'Save'
